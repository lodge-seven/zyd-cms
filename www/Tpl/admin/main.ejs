	function dianji(a) {
		var aaa = $(a).find('a').attr('href');
		$('#contentRight').attr('src', aaa);
	}

	/*[网址元素*/
	function html_name(name){
		html=window.location.search;
		arr_html=html.split("?");
		if(arr_html.length>1){
			arr_html=arr_html[1].split("&");

			for(i=0;i<arr_html.length;i++){
				arr_b=arr_html[i].split("=");
				if(arr_b[0]==name){
					return arr_b['1'];
					break;
				}

			}
			return '';
		}
		else
			return '';
	}

	function nav(s) {
		s = encodeURIComponent(encodeURIComponent(s));
		window.location.href = '/Tpl/admin/main.xhtml?nav='+s;
	}


	//导航样式切换
	function togo() {
		$("#contentWrap").toggleClass("contentWrap");
		$("#contentMain").toggleClass("contentMain");
		$("#bd").toggleClass("sidebar-collapse");
		$("#contentLeft").toggleClass("contentLeft1 contentLeft2");
		w = $(document.body).width() - $("#contentLeft").css("width").replace("px","");
		wth = w + "px" ;
		$("iframe").css({"width": wth});
	}

	//子菜单展开或关闭
	function fa() {
		$("#iconi").toggleClass("iconi1 iconi2");
		if($("#iconi").hasClass('iconi1')){
			$(".treeview-menu").slideDown(500);
		}else{
			$(".treeview-menu").slideUp(500);
		}
	}
</script>

